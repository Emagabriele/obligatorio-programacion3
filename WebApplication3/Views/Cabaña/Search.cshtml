@{
    ViewData["Title"] = "Search por Dato";
}

<h1>Search</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchPorNombre" method="get">
            <div class="form-group">
                <label class="control-label">Ingrese Nombre:</label>
                <input name="nombre" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>

        <form asp-action="SearchPorTipo" method="get">
            <div class="form-group">
                <label class="control-label">Ingrese Nombre de Tipo:</label>
                <input name="nombreTipo" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="SearchPorCapacidad" method="get">
            <div class="form-group">
                <label class="control-label">Ingrese Capacidad:</label>
                <input name="Capacidad.CapacidadCabaña" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="SearchHabilitadas" method="get">
            <div class="form-group">
                <input type="submit" value="Ver Habilitadas" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="SearchAll">Volver</a>
</div>

